# Allow rild to read, write and create files in vendor_data_file
allow rild vendor_data_file:dir { write add_name };
allow rild vendor_data_file:file create_file_perms;
allow rild default_prop:file { getattr map open read };

# Allow rild to read, write and create files in wifi_nv_data_file
allow rild wifi_nv_data_file:dir rw_file_perms;
allow rild wifi_nv_data_file:file create_file_perms;

dontaudit rild vendor_diag_device:chr_file rw_file_perms;
dontaudit rild vendor_pd_locater_dbg_prop:file r_file_perms;
